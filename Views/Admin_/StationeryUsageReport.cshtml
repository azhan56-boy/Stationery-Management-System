@{
    ViewData["Title"] = "Stationery Usage Report";
    Layout = "~/Views/Shared/Admin-layout.cshtml";
}

<div class="container my-3">
    <div class="page-header">
        <div class="page-title">
            <h4>Stationery Usage Report</h4>
            <h6>Check usage and cost percentage of each stationery item</h6>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Total Used</th>
                            <th>Total Cost</th>
                            <th>Cost %</th>
                            <th>User Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ReportData)
                        {
                            <tr>
                                <td>@item.ItemName</td>
                                <td>@item.TotalUsed</td>
                                <td>@item.TotalCost</td>
                                <td>@item.CostPercentage.ToString("0.00")%</td>
                                <td>@item.UserCount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <h5 class="mt-3">Total Cost: @ViewBag.TotalCost</h5>
        </div>
    </div>
</div>
